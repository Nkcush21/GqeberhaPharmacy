@{
    Layout = "_Layout";
    ViewData["Title"] = "Home";
}

<div class="container py-5">
    <div class="row align-items-center">
        <div class="col-md-6">
            <h1 class="display-4"><i class="fas fa-hospital"></i> Ibhayi Pharmacy</h1>
            <p class="lead">Professional Prescription Management System</p>
            <p>Manage prescriptions, dispensed medications, and stock levels efficiently.</p>
            <div class="mt-4">
                <a href="/Account/Login" class="btn btn-primary btn-lg me-2"><i class="fas fa-sign-in-alt"></i> Login</a>
                <a href="/Account/Register" class="btn btn-outline-primary btn-lg"><i class="fas fa-user-plus"></i> Register</a>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0 shadow">
                <div class="card-body text-center py-5">
                    <h2 class="mb-4"><i class="fas fa-pills" style="font-size: 3rem; color: #667eea;"></i></h2>
                    <h5>Welcome to Ibhayi Pharmacy</h5>
                    <p class="text-muted">Your trusted prescription management partner</p>
                </div>
            </div>
        </div>
    </div>

    <hr class="my-5">

    <div class="row mt-5">
        <div class="col-md-4 mb-4">
            <div class="card text-center border-0 shadow-sm">
                <div class="card-body">
                    <h3><i class="fas fa-user-tie" style="color: #667eea;"></i></h3>
                    <h5 class="card-title">Pharmacy Manager</h5>
                    <p class="card-text">Manage pharmacy details, medications, suppliers, doctors, and pharmacists</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card text-center border-0 shadow-sm">
                <div class="card-body">
                    <h3><i class="fas fa-user-md" style="color: #667eea;"></i></h3>
                    <h5 class="card-title">Pharmacist</h5>
                    <p class="card-text">Load prescriptions, dispense medications, and generate reports</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card text-center border-0 shadow-sm">
                <div class="card-body">
                    <h3><i class="fas fa-user" style="color: #667eea;"></i></h3>
                    <h5 class="card-title">Customer</h5>
                    <p class="card-text">Upload prescriptions and manage your medication orders</p>
                </div>
            </div>
        </div>
    </div>
</div>
