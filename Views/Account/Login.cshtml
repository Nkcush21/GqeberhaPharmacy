@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Login - Ibhayi Pharmacy";
}

<div class="text-center mb-4">
    <h1><i class="fas fa-lock"></i> Login</h1>
    <p class="text-muted">Ibhayi Pharmacy Management System</p>
</div>

<form method="post">
    <div class="mb-3">
        <label for="Email" class="form-label">Email Address</label>
        <input type="email" class="form-control" id="Email" name="Email" required>
    </div>

    <div class="mb-3">
        <label for="Password" class="form-label">Password</label>
        <input type="password" class="form-control" id="Password" name="Password" required>
    </div>

    <div class="mb-3 form-check">
        <input type="checkbox" class="form-check-input" id="RememberMe" name="RememberMe">
        <label class="form-check-label" for="RememberMe">
            Remember me
        </label>
    </div>

    <button type="submit" class="btn btn-primary w-100">Login</button>

    <hr>

    <div class="text-center">
        <p>Don't have an account? <a asp-action="Register">Register here</a></p>
        <p><a asp-action="ForgotPassword">Forgot your password?</a></p>
    </div>

    <div asp-validation-summary="All" class="alert alert-danger mt-3" role="alert"></div>
</form>
