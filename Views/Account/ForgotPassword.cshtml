@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Forgot Password";
}

<div class="text-center mb-4">
    <h1><i class="fas fa-key"></i> Forgot Password</h1>
</div>

<form method="post">
    <div class="mb-3">
        <label for="Email" class="form-label">Email Address</label>
        <input type="email" class="form-control" id="Email" name="Email" required>
        <small class="form-text text-muted">We'll send you instructions to reset your password.</small>
    </div>

    <button type="submit" class="btn btn-primary w-100">Send Reset Link</button>

    <hr>

    <div class="text-center">
        <p><a asp-action="Login">Back to Login</a></p>
    </div>

    <div asp-validation-summary="All" class="alert alert-danger mt-3" role="alert"></div>
</form>
