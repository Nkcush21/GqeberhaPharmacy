@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Reset Password";
}

<div class="text-center mb-4">
    <h1><i class="fas fa-check-circle"></i> Reset Password</h1>
</div>

<form method="post">
    <div class="mb-3">
        <label for="Email" class="form-label">Email Address</label>
        <input type="email" class="form-control" id="Email" name="Email" required>
    </div>

    <div class="mb-3">
        <label for="Password" class="form-label">New Password</label>
        <input type="password" class="form-control" id="Password" name="Password" required>
    </div>

    <div class="mb-3">
        <label for="ConfirmPassword" class="form-label">Confirm Password</label>
        <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" required>
    </div>

    <input type="hidden" name="Code" value="@ViewData["Code"]">

    <button type="submit" class="btn btn-primary w-100">Reset Password</button>

    <hr>

    <div class="text-center">
        <p><a asp-action="Login">Back to Login</a></p>
    </div>

    <div asp-validation-summary="All" class="alert alert-danger mt-3" role="alert"></div>
</form>
